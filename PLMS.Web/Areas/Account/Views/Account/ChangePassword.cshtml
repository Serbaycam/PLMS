@using AuthIdentity.Core.DTOs;
@model AuthIdentityUserChangePasswordDto;
@{
    ViewData["Title"] = "ChangePassword";
}
<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-5 col-lg-7 col-md-9 col-12">
            <div class="card text-black" style="border-radius: 25px; border-top:#0d6efd 5px solid;">
                <div class="card-body p-5">
                    <div class="row justify-content-center">
                        <div class="col-12">
                            <img src="~/Logo/PLMSLogo.svg" alt="" style="height:100px; width:100px; position:absolute" class="brand-image img-circle elevation-3 float-right d-inline">
                            <p class="text-center h2 fw-bold mb-5 mx-4 mt-4">Change<br />Password</p>

                            <form style="width:100%;" class="mx-4 px-5" asp-area="Account" asp-controller="Account" asp-action="ChangePassword" method="post">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="OldPassword" type="password" class="form-control" id="OldPasswordInput" placeholder="Old Password">
                                        <label asp-for="OldPassword" for="OldPasswordInput"></label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="OldPassword"></span>
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="NewPassword" type="password" class="form-control" id="NewPasswordInput" placeholder="New Password">
                                        <label asp-for="NewPassword" for="NewPasswordInput"></label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="PasswordMatch" type="password" class="form-control" id="PasswordMatchInput" placeholder="New Password">
                                        <label asp-for="PasswordMatch" for="PasswordMatchInput"></label>
                                    </div>
                                    <span class="text-danger" asp-validation-for="PasswordMatch"></span>
                                </div>
                                <div class="input-group mb-3 d-flex justify-content-center">
                                    <button type="submit" class="btn btn-primary btn-lg me-5">Submit</button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>