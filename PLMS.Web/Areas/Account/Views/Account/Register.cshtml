@model AuthIdentityUserRegisterDto;
@{
    Layout = null;
    ViewData["Title"] = "Register";
}
<html>
<partial name="Partial/_HeadPartial" />
<body>
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-5 col-lg-7 col-md-9 col-12">
                <div class="card text-black" style="border-radius: 25px; border-top:#0d6efd 5px solid;">
                    <div class="card-body p-5">
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <img src="~/Logo/PLMSLogo.svg" alt="" style="height:100px; width:100px; position:absolute" class="brand-image img-circle elevation-3 float-right d-inline">
                                <p class="text-center h2 fw-bold mb-5 mx-4 mt-4">Register</p>

                                <form style="width:100%;" class="mx-4 px-5" asp-area="Account" asp-controller="Account" asp-action="Register" method="post">
                                    @Html.AntiForgeryToken()
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                                        <div class="form-floating">
                                            <input asp-for="Name" type="text" class="form-control" id="registerNameInput" placeholder="Name">
                                            <label asp-for="Name" for="registerNameInput"></label>

                                        </div>
                                        <span class="text-danger" asp-validation-for="Name"></span>
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                                        <div class="form-floating">
                                            <input asp-for="Surname" type="text" class="form-control" id="registerSurnameInput" placeholder="Surname">
                                            <label asp-for="Surname" for="registerSurnameInput"></label>
                                        </div>
                                        <span class="text-danger" asp-validation-for="Surname"></span>
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                        <div class="form-floating">
                                            <input asp-for="Email" type="email" class="form-control" id="registerEmailInput" placeholder="name@example.com">
                                            <label asp-for="Email" for="registerEmailInput"></label>
                                        </div>
                                        <span class="text-danger" asp-validation-for="Email"></span>
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        <div class="form-floating">
                                            <input asp-for="Password" type="password" class="form-control" id="registerPasswordInput" placeholder="Password">
                                            <label asp-for="Password" for="registerPasswordInput"></label>
                                        </div>
                                        <span class="text-danger" asp-validation-for="Password"></span>
                                    </div>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        <div class="form-floating">
                                            <input asp-for="PasswordMatch" type="password" class="form-control" id="registerPasswordMatchInput" placeholder="Password">
                                            <label asp-for="PasswordMatch" for="registerPasswordMatchInput"></label>
                                        </div>
                                        <span class="text-danger" asp-validation-for="PasswordMatch"></span>
                                    </div>
                                    <div class="input-group mb-3 d-flex justify-content-center">
                                        <button type="submit" class="btn btn-primary btn-lg me-5">Register</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <partial name="Partial/_ScriptsPartial" />
    @await Component.InvokeAsync("NToastNotify")
    <partial name="_ValidationScriptsPartial" />
</body>
</html>

