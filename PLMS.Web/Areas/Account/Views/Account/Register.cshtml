@model AuthIdentityUserRegisterDto;
@{
    ViewData["Title"] = "Index";
}
<div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-5 col-lg-7 col-md-9 col-12">
            <div class="card text-black" style="border-radius: 25px; border-top:blue 5px solid;">
                <div class="card-body p-5">
                    <div class="row justify-content-center">
                        <div class="col-12">

                            <p class="text-center h2 fw-bold mb-5 mx-4">Register</p>

                            <form style="width:100%;" class="mx-4 px-5" asp-area="Account" asp-controller="Account" asp-action="Register" method="post">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="Name" type="text" class="form-control" id="registerNameInput" placeholder="Name">
                                        <label for="registerNameInput">Name</label>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fas fa-info-circle"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="Surname" type="text" class="form-control" id="registerSurnameInput" placeholder="Surname">
                                        <label for="registerSurnameInput">Surname</label>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="Email" type="email" class="form-control" id="registerEmailInput" placeholder="name@example.com">
                                        <label for="registerEmailInput">Email address</label>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="Password" type="password" class="form-control" id="registerPasswordInput" placeholder="Password">
                                        <label for="registerPasswordInput">Password</label>
                                    </div>
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                    <div class="form-floating">
                                        <input asp-for="PasswordMatch" type="password" class="form-control" id="registerPasswordMatchInput" placeholder="Password">
                                        <label for="registerPasswordMatchInput">Re-Enter Password</label>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-center mx-4 mt-3">
                                    <button type="submit" type="button" class="btn btn-primary btn-lg">Register</button>
                                </div>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
