@model AuthIdentityUserDto
@{
    ViewData["Title"] = "User Profile";
}
<form asp-area="Account" asp-controller="Account" asp-action="UserProfile" method="post">
    @Html.AntiForgeryToken()

<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img width="150px" class="rounded-circle mt-5" src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg"><span class="font-weight-bold">@Model.Name @Model.Surname</span><span class="text-black-50">@Model.Email</span><span> </span></div>
        </div>
        <div class="col-md-5 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-6"><label class="labels">@Html.DisplayNameFor(modelItem=>modelItem.Name)</label><input type="text" class="form-control" placeholder="first name" asp-for="@Model.Name"></div>
                        <div class="col-md-6"><label class="labels">@Html.DisplayNameFor(modelItem => modelItem.Surname)</label><input type="text" class="form-control" asp-for="@Model.Surname" placeholder="surname"></div>
                </div>
                <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">@Html.DisplayNameFor(modelItem => modelItem.PhoneNumber)</label><input type="text" class="form-control" placeholder="+905554443322" asp-for="@Model.PhoneNumber"></div>
                        <div class="col-md-12"><label class="labels">@Html.DisplayNameFor(modelItem => modelItem.Address)</label><input type="text" class="form-control" placeholder="Address" asp-for="@Model.Address"></div>
                        <div class="col-md-12"><label class="labels">@Html.DisplayNameFor(modelItem => modelItem.Postcode)</label><input type="number" class="form-control" placeholder="Postcode" asp-for="@Model.Postcode"></div>
                        <div class="col-md-12"><label class="labels">@Html.DisplayNameFor(modelItem => modelItem.Country)</label><input type="text" class="form-control" placeholder="Country" asp-for="@Model.Country"></div>
                        <div class="col-md-12"><label class="labels">@Html.DisplayNameFor(modelItem => modelItem.City)</label><input type="text" class="form-control" placeholder="City" asp-for="@Model.City"></div>
                        <div class="col-md-12"><label class="labels">@Html.DisplayNameFor(modelItem => modelItem.Education)</label><input type="text" class="form-control" placeholder="Education" asp-for="@Model.Education"></div>
                        <div class="col-md-12"><label class="labels">@Html.DisplayNameFor(modelItem => modelItem.BirthDay)</label><input type="date" class="form-control" placeholder="Birth Day" asp-for="@Model.BirthDay"></div>
                </div>
                <div class="mt-5 text-center"><button class="btn btn-outline-secondary profile-button" type="submit">Save Profile</button></div>
            </div>
        </div>
         <div class="col-md-4">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center experience"><span>Edit Experience</span><span class="border px-3 p-1 add-experience"><i class="fa fa-plus"></i>&nbsp;Experience</span></div><br>
                <div class="col-md-12"><label class="labels">Experience in Designing</label><input type="text" class="form-control" placeholder="experience" ></div> <br>
                <div class="col-md-12"><label class="labels">Additional Details</label><input type="text" class="form-control" placeholder="additional details"></div>
            </div>
        </div> 
    </div>
</div>
</form>