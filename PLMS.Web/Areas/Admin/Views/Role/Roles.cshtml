@model List<AuthIdentityRole>
@{
    ViewData["Title"] = "Roles";
}
<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col">
                <a asp-action="RoleAdd" asp-controller="Role" asp-area="Admin" class="btn btn-outline-info">Add Role</a>
            </div>
            @if (Model.Count > 0)
            {
                <table class="table table-bordered col-12 mt-3">
                    <thead class="bg-secondary">
                        <tr>
                            <th class="w-72">Name</th>
                            <th class="w-25">Modify/Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (AuthIdentityRole role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td class="text-center">
                                    <form class="d-inline" asp-area="Admin" asp-controller="Role" asp-action="RoleModify" asp-route-id="@role.Id">
                                        <button type="submit" class="btn btn-outline-info"><i class="fa-solid fa-pencil text-info"></i></button>
                                    </form>
                                    <form class="d-inline" asp-area="Admin" asp-controller="Role" asp-action="RoleDelete" asp-route-id="@role.Id">
                                        <button type="submit" class="btn btn-outline-danger"><i class="fa-solid fa-trash text-danger"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="col-12 mt-3">
                    <div class="alert alert-danger" role="alert">
                        Careful.. No roles here ?
                    </div>
                </div>
            }
        </div>

    </div>
</div>
